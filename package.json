        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "husky": "^8.0.0",
        "jiti": "^2.6.1",
        "jsdom": "^27.2.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "postcss-preset-env": "^10.4.0",
        "prettier": "^3.6.2",
        "pug": "^3.0.3",
        "pug-cli": "1.0.0-alpha6",
        "sass": "^1.94.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.47.0",
        "vite": "^7.2.4",
        "vitest": "^4.0.13",
        "zod": "^4.1.12",
        "zod-validation-error": "^5.0.0"
    },
    "dependencies": {
